<UserControl x:Class="CodeBoxHTML.Controls.TooltipBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    MinHeight="16" MinWidth="20">
	<Border BorderThickness="1" BorderBrush="Gray" CornerRadius="0" Background="Beige" Padding="3">
		<StackPanel Orientation="Vertical">
			<TextBlock x:Name="title" FontWeight="Bold" />
			<TextBlock x:Name="body" />
			<TextBlock x:Name="footer" FontStyle="Italic" FontSize="11" />
		</StackPanel>
	</Border>
</UserControl>
